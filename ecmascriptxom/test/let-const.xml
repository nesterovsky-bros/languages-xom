<?xml version="1.0" encoding="utf-8"?>
<script xmlns="http://www.nesterovsky-bros.com/ecmascript6/2015-02-20">
  <comment xml:space="preserve">
function f() {
  {
    let x;
    {
      // okay, block scoped name
      const x = "sneaky";
      // error, const
      x = "foo";
    }
    // error, already declared in block
    let x = "inner";
  }
}
  </comment>
 
  <function>
    <name value="f"/>
    <body>
      <block>
        <let>
          <name value="x"/>
        </let>

        <block>
          <const>
            <comment>okay, block scoped name</comment>
            <name value="x"/>
            <initialize>
              <string value="sneaky"/>
            </initialize>
          </const>

          <expression>
            <comment>error, const</comment>
            <assign>
              <ref name="x"/>
              <string value="foo"/>
            </assign>
          </expression>
        </block>

        <let>
          <comment>error, already declared in block</comment>
          <name value="x"/>
          <initialize>
            <string value="inner"/>
          </initialize>
        </let>
      </block>
    </body>
  </function>
</script>