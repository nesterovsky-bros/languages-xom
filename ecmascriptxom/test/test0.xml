<?xml version="1.0" encoding="utf-8"?>
<script xmlns="http://www.nesterovsky-bros.com/ecmascript6/2015-02-20">
  <comment xml:space="preserve">
    function myFunction() {
      document.getElementById("demo").innerHTML = "Paragraph changed.";
    }
  </comment>
  <function>
    <name value="myFunction"/>
    <body>
      <expression>
        <assign>
          <ref name="innerHTML">
            <call>
              <ref name="getElementById">
                <ref name="document"/>
              </ref>
              <string value="demo"/>
            </call>
          </ref>
          <string value="Paragraph changed."/>
        </assign>
      </expression>
    </body>
  </function>
</script>